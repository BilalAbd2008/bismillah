<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Latar belakang transparan -->
            <size android:height="2dp"/> <!-- Tinggi garis -->
            <stroke android:width="2dp" android:color="@android:color/white"/> <!-- Garis putih -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Latar belakang transparan jika tidak dipilih -->
        </shape>
    </item>
</selector>

