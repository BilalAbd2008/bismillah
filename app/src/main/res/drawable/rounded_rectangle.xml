<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Color -->
    <solid android:color="#AAFFFFFF"/> <!-- Sesuaikan warna latar belakang -->

    <!-- Corner Radius untuk sudut membulat -->
    <corners android:radius="16dp"/> <!-- Sesuaikan besar radius sesuai kebutuhan -->

    <!-- Opsional: border (stroke) untuk memperjelas tepi rectangle -->
    <stroke
        android:width="2dp"
        android:color="#33000000"/> <!-- Sesuaikan warna stroke jika diperlukan -->
</shape>
