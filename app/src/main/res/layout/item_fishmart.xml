<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- CardView untuk item kiri -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewLeft"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:layout_weight="1"
        android:layout_marginEnd="4dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/itemImageLeft"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/itemNameLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item Name Left"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/itemPriceLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item Price Left"
                android:textSize="14sp"
                android:textColor="@android:color/holo_green_dark" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- CardView untuk item kanan -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewRight"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:layout_weight="1"
        android:layout_marginStart="4dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/itemImageRight"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/itemNameRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item Name Right"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/itemPriceRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item Price Right"
                android:textSize="14sp"
                android:textColor="@android:color/holo_green_dark" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
