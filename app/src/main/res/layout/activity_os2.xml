<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/onboardingscreen2"
    tools:context=".os2">

    <!-- Tombol Kembali di Kiri Bawah -->


    <!-- Tombol Skip di Kanan Atas -->
    <Button
        android:id="@+id/btnSkip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="Skip"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp" />

    <!-- Layout Tombol Next di Kanan Bawah -->


    <LinearLayout
        android:id="@+id/rectangleLayout"
        android:layout_width="381dp"
        android:layout_height="360dp"
        android:layout_margin="16dp"

        android:elevation="4dp"
        android:background="@drawable/rounded_rectangle"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/dotsLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal">
            <!-- Titik-titik akan ditambahkan secara dinamis di Java -->
        </LinearLayout>

        <!-- Text Above Rectangle -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif-medium"
            android:text="Belajar dan Belanja dengan Mudah"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="35dp"
            android:textStyle="bold" />
        <!-- Beri sedikit jarak di bawah teks -->

        <TextView
            android:id="@+id/Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:font="@font/popinbold"
            android:text="Nikmati Video Pembelajaran  dan belanja ikan serta perlengkapan aquarium langsung dari aplikasi"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <!-- Tombol Kembali di Kiri -->
            <Button
                android:id="@+id/btnBack"
                android:layout_width="20dp"
                android:layout_height="89dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="Kembali"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <!-- Space antara kedua tombol -->
            <Space
                android:layout_width="101dp"
                android:layout_height="match_parent" />

            <!-- Tombol Next di Kanan -->
            <ImageButton
                android:id="@+id/btnNext"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="Next"
                android:src="@drawable/arrow" />
        </LinearLayout>


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
